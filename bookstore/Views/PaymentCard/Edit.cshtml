@model bookstore.Models.Payment_card

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>
        .center {
            margin: auto;
            width: 50%;
        }
    </style>
}

<section id="cart_items">
    <div id="contact-page" class="container">
        <div class="bg">
            <div class="row justify-content-center" style="margin-bottom: 80px;">
                <div class="col-12 center">
                    <div class="contact-form">
                        <h2 class="title text-center">Create Payment Card</h2>
                        @using (Html.BeginForm("Edit", "PaymentCard", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken();
                            <br />

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.card_number, new { type = "text", @class = "form-control", placeholder = "Enter your card number.." })<br />
                                @Html.ValidationMessageFor(m => m.card_number, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.from_date, new { type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.from_date, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.to_date, new { type = "date", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.to_date, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.card_type, new { type = "text", @class = "form-control", placeholder = "Enter the card type.." })
                                @Html.ValidationMessageFor(m => m.card_type, "", new { @class = "text-danger" })
                            </div>



                            <br />

                            <button type="submit" class="btn btn-default update pull-right"> Submit </button>
                            <a href="@Url.Action("Index","PaymentCard")" class="btn btn-default update pull-right"> Back </a>

                            <br /><br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



