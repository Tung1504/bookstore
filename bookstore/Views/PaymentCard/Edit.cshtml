@model bookstore.Models.Payment_card

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="cart_items">
    <div class="container">
        <div class="shopper-informations">
            <div class="row">
                <div class="col-sm-9">
                    <div class="shopper-info">

                        <div class="heading">
                            <h3>Edit Payment Carad</h3>
                            <p>You can Update your payment card here!</p>
                        </div>

                        <div class="row">
                            <h5 style="color: red"> @Html.ValidationSummary()</h5>
                            <div class="col-sm-12">
                                <div class="total_area">
                                    <ul>
                                        <li>
                                            @using (Html.BeginForm("Edit", "PaymentCard", FormMethod.Post, new { @class = "form" }))
                                            {
                                                @Html.AntiForgeryToken();
                                                <div>
                                                    <lable>Card Number</lable>
                                                    @Html.TextBoxFor(m => m.card_number, new { type = "text", @class = "form-control" })
                                                </div>

                                                <div>
                                                    <lable>From Date</lable>
                                                    @Html.TextBoxFor(m => m.from_date, new { type = "date", @class = "form-control" })

                                                </div>

                                                <div>
                                                    <lable>To Date</lable>
                                                    @Html.TextBoxFor(m => m.to_date, new { type = "date", @class = "form-control" })
                                                </div>

                                                <div>
                                                    <lable>Cart Type</lable>
                                                    @Html.TextBoxFor(m => m.card_type, new { type = "text", @class = "form-control" })

                                                </div>


                                                <a href="@Url.Action("Index","PaymentCard")" class="btn btn-default update"> Back </a>
                                                <button type="submit" class="btn btn-default update"> Submit </button>
                                            }
                                        </li>
                                    </ul>

                                </div>
                            </div>
                        </div>

                        

                    </div>


                </div>
            </div>
        </div>
    </div>
</section>



