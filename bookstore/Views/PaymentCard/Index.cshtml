@model IEnumerable<bookstore.Models.Payment_card>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section id="cart_items">
    <div class="container">
        <div class="shopper-informations">
            <div class="row">
                <div class="shopper-info">
                    <div class="col-sm-11">
                        <div class="heading">
                            <h3>Payment Card Management</h3>
                            <p>You can Update your payment cards here!</p>
                        </div>

                        <a href="@Url.Action("Create", "PaymentCard")" class="btn btn-success"> Create New</a>
                        <br /><br />

                        <div class="table-responsive cart_info">
                            
                            <table class="table table-bordered first">
                                <thead>
                                    <tr class="cart_menu">
                                        <th scope="col">ID</th>
                                        <th scope="col">Card Number</th>
                                        <th scope="col">From Date</th>
                                        <th scope="col">To Date</th>
                                        <th scope="col">Cart Type Code</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var paymentCard in Model)
                                    {
                                        <tr>
                                            <td>@paymentCard.id</td>
                                            <td>@paymentCard.card_number</td>
                                            <td>@paymentCard.from_date</td>
                                            <td>@paymentCard.to_date</td>
                                            <td>@paymentCard.card_type</td>
                                            <td>
                                                @Html.ActionLink(" Edit", "Edit", new { id = paymentCard.id }, new { @class = "btn btn-info" })
                                                @using (Html.BeginForm("Delete", "PaymentCard", new { id = paymentCard.id }, FormMethod.Post, new { style = "display:inline" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger "> Delete</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                            <a href="@Url.Action("Index","Customer")" class="btn btn-default update"> Back </a>
                            <br /><br />
                        </div>


                    </div>



                </div>
            </div>
        </div>
    </div>
</section>


