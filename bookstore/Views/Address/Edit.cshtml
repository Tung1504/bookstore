@model bookstore.Models.Address

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>
        .center {
            margin: auto;
            width: 50%;
        }
    </style>
}

<section id="cart_items">
    <div id="contact-page" class="container">
        <div class="bg">
            <div class="row justify-content-center" style="margin-bottom: 80px;">
                <div class="col-12 center">
                    <div class="contact-form">
                        <h2 class="title text-center">Edit Address</h2>
                        @using (Html.BeginForm("Edit", "Address", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken();
                            <br />

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.address1, new { type = "text", @class = "form-control", placeholder = "Enter your address.." })
                                @Html.ValidationMessageFor(m => m.address1, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.city, new { type = "text", @class = "form-control", placeholder = "Enter your city.." })
                                @Html.ValidationMessageFor(m => m.city, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.district, new { type = "text", @class = "form-control", placeholder = "Enter your district.." })
                                @Html.ValidationMessageFor(m => m.district, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(m => m.postal_code, new { type = "text", @class = "form-control", placeholder = "Enter the postal code.." })
                                @Html.ValidationMessageFor(m => m.postal_code, "", new { @class = "text-danger" })
                            </div>



                            <br />

                            <button type="submit" class="btn btn-default update pull-right"> Submit </button>
                            <a href="@Url.Action("Index","Address")" class="btn btn-default update pull-right"> Back </a>

                            <br /><br />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



