@model bookstore.ViewModels.Widget.WidgetViewModel
<div class="left-sidebar">
    <h2>Category</h2>

    <div class="panel-group category-products" id="accordian">
        <div class="panel panel-default">
            @foreach (var category in Model.Categories.Take(5))
            {
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a href="@Url.Action("Index","CategoryProduct", new {id = category.id })">@category.category_name</a>
                    </h4>

                </div>
            }
        </div>

    </div>

    <div class="brands_products">
        <h2>Publisher</h2>
        <div class="brands-name">
            <ul class="nav nav-pills nav-stacked">
                @foreach (var item in Model.Publishers.Take(5))
                {
                    <li><a href="@Url.Action("Index","PublisherProduct", new {id = item.id })">@item.publisher_name</a></li>
                }
            </ul>
        </div>
    </div>

