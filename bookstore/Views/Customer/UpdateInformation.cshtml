@model bookstore.ViewModels.Customer.CustomerUpdateInformationViewModel
@{
    ViewBag.Title = "UpdateInfromation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="cart_items">
    <div class="container">
        <div class="shopper-informations">
            <div class="row">
                <div class="col-sm-9">
                    <div class="shopper-info">
                        <div class="heading">
                            <h3>Edit User Information</h3>
                            <p>You can Update your personal information here!</p>
                        </div>

                        <div class="row">
                            <h5 style="color: red"> @Html.ValidationSummary()</h5>
                            <div class="col-sm-12">
                                <div class="total_area">
                                    <ul>
                                        <li>
                                            @using (Html.BeginForm("UpdateInformation", "Customer", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                                            {
                                                @Html.AntiForgeryToken();
                                                <div>
                                                    <lable>Name</lable>
                                                    @Html.TextBoxFor(m => m.Name, new { type = "text", @class = "form-control" })

                                                </div>

                                                <div>
                                                    <lable>UserName</lable>
                                                    @Html.TextBoxFor(m => m.Username, new { type = "text", @class = "form-control" })

                                                </div>

                                                <div>
                                                    <lable>Phone</lable>
                                                    @Html.TextBoxFor(m => m.Phone, new { type = "text", @class = "form-control" })

                                                </div>
                                                <div>
                                                    <lable>Email</lable>
                                                    @Html.TextBoxFor(m => m.Email, new { type = "text", @class = "form-control" })

                                                </div>
                                                <div>
                                                    <lable>Date of birth</lable>
                                                    @Html.TextBoxFor(m => m.Dob, new { type = "date", @class = "form-control" })

                                                </div>


                                                <a href="@Url.Action("Index","Customer")" class="btn btn-default update"> Back </a>
                                                <button type="submit" class="btn btn-default update"> Submit </button>
                                            }
                                        </li>

                                    </ul>

                                </div>
                            </div>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    </div>
</section>

