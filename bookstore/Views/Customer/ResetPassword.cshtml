@model bookstore.ViewModels.Customer.CustomerResetPasswordViewModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="cart_items">
    <div class="container">

        <div class="shopper-informations">
            <div class="row" style="margin-bottom: 80px;">
                <div class="col-sm-9">
                    <div class="shopper-info">
                        <div class="heading">
                            <h3>Edit User Information</h3>
                            <p>You can Update your personal information here!</p>
                        </div>

                        <div class="row">
                            <h5 style="color: red"> @Html.ValidationSummary()</h5>
                            <div class="col-sm-12">
                                <div class="total_area">
                                    <ul>
                                        <li>
                                            @using (Html.BeginForm("ResetPassword", "Customer", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                                            {
                                                @Html.AntiForgeryToken();
                                                <br />

                                                <lable>New Password</lable>
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your new password" })<br />

                                                <lable>Confirm New Password</lable>
                                                @Html.PasswordFor(m => m.RePassword, new {  @class = "form-control", placeholder = "Enter the password again" })<br />
                                                <br />

                                                <button type="submit" class="btn btn-default update pull-right"> Submit </button>
                                                <a href="@Url.Action("Index","Address")" class="btn btn-default update pull-right"> Back </a>

                                                <br /><br />
                                            }
                                        </li>

                                    </ul>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



