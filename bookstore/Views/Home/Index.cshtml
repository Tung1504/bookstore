        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("Index", "Widget")
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <h2 class="title text-center">Features Items</h2>
                    @foreach (var book in Model.ListBook)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper ">

                                <div class="single-products ">
                                    <div class="productinfo text-center">

                                        <img src="~/images/shop/@book.image" alt="" />
                                        <h2>$@book.price</h2>
                                        <p>@book.title</p>
                                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <a href="@Url.Action("ProductDetail", "Home", new { id = book.id})">
                                                <img src="~/images/shop/@book.image" alt="" />
                                                <h2>$@book.price</h2>
                                                <p>@book.title</p>
                                            </a>

                                            @if (book.quantity_in_stock > 0)
                                            {
                                                using (Html.BeginForm("AddToCart", "Cart", new { bookId = book.id }, FormMethod.Post))
                                                {
                                                    <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i></button>
                                                }
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="category-tab">

                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">


                            @foreach (var category in Model.ListCategory)
                            {
                                if (Model.ListCategory.IndexOf(category) == 0)
                                {
                                    <li class="active"><a href="#category_@category.id" data-toggle="tab">@category.category_name</a></li>
                                }
                                else
                                {

                                    <li><a href="#category_@category.id" data-toggle="tab">@category.category_name</a></li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="tab-content">

                        @foreach (var category in Model.ListCategory)
                        {
                            <div class="tab-pane fade active in" id="category_@category.id">
                                @foreach (var book in Model.ListBook.Where(m => m.category_id == category.id))
                                {
                                    <h1></h1>
                                    <div class="col-sm-3">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">

                                                    <img src="~/images/shop/@book.image" alt="" />
                                                    <h2>$@book.price</h2>
                                                    <p>@book.title</p>
                                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                                </div>
                                                <div class="product-overlay">
                                                    <div class="overlay-content">
                                                        <a href="@Url.Action("ProductDetail", "Home", new { id = book.id})">
                                                            <img src="~/images/shop/@book.image" alt="" />
                                                            <h2>$@book.price</h2>
                                                            <p>@book.title</p>
                                                        </a>

                                                        @if (book.quantity_in_stock > 0)
                                                        {
                                                            using (Html.BeginForm("AddToCart", "Cart", new { bookId = book.id }, FormMethod.Post))
                                                            {
                                                                <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i></button>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                        }

                    </div>
                </div>

                <div class="recommended_items">

                    <h2 class="title text-center">recommended items</h2>

                    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                @foreach (var book in Model.ListBook.OrderByDescending(m => m.quantity_in_stock).Take(3))
                                {

                                    <div class="col-sm-4">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">

                                                    <img src="~/images/shop/@book.image" alt="" />
                                                    <h2>$@book.price</h2>
                                                    <p>@book.title</p>
                                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                                </div>
                                                <div class="product-overlay">
                                                    <div class="overlay-content">
                                                        <a href="@Url.Action("ProductDetail", "Home", new { id = book.id})">
                                                            <img src="~/images/shop/@book.image" alt="" />
                                                            <h2>$@book.price</h2>
                                                            <p>@book.title</p>
                                                        </a>

                                                        @if (book.quantity_in_stock > 0)
                                                        {
                                                            using (Html.BeginForm("AddToCart", "Cart", new { bookId = book.id }, FormMethod.Post))
                                                            {
                                                                <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i></button>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="item">
                                @foreach (var book in Model.ListBook.OrderByDescending(m => m.quantity_in_stock).Take(3))
                                {

                                    <div class="col-sm-4">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">

                                                    <img src="~/images/shop/@book.image" alt="" />
                                                    <h2>$@book.price</h2>
                                                    <p>@book.title</p>
                                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                                </div>
                                                <div class="product-overlay">
                                                    <div class="overlay-content">
                                                        <a href="@Url.Action("ProductDetail", "Home", new { id = book.id})">
                                                            <img src="~/images/shop/@book.image" alt="" />
                                                            <h2>$@book.price</h2>
                                                            <p>@book.title</p>
                                                        </a>

                                                        @if (book.quantity_in_stock > 0)
                                                        {
                                                            using (Html.BeginForm("AddToCart", "Cart", new { bookId = book.id }, FormMethod.Post))
                                                            {
                                                                <button type="submit" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i></button>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section js{
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollUp.min.js")"></script>
    <script src="@Url.Content("~/Scripts/price-range.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")"></script>
    <script src="@Url.Content("~/Scripts/main.js")"></script>
}

