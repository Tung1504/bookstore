@model bookstore.ViewModels.BookCategoryPublisherAuthorViewModel
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("Index", "Widget")
            </div>  

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    @{
                        string search = ViewBag.search;
                    }
                    <h2 class="title text-center">Searched: @search</h2>

                    @foreach (var book in Model.ListBook)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper ">

                                @Html.Partial("~/Views/Product/_Item.cshtml", book)
                            </div>
                        </div>
                    }



                </div><!--features_items-->

                <ul class="pagination">
                    @{
                        int numberPage = ViewBag.numberPage;
                        int pageCurrent = ViewBag.pageCurrent;
                        int i;
                        for (i = 1; i <= numberPage; i++)
                        {
                            if (i == pageCurrent)
                            {
                                <li class="active"><a href="?page=@i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="?page=@i">@i</a></li>
                            }
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</section>


@section js{
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollUp.min.js")"></script>
    <script src="@Url.Content("~/Scripts/price-range.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")"></script>
    <script src="@Url.Content("~/Scripts/main.js")"></script>
}
