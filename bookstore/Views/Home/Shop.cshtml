@model bookstore.ViewModels.BookCategoryPublisherAuthorViewModel
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        <div class="panel panel-default">

                            @foreach (var category in Model.ListCategory)
                            {
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a href="@Url.Action("Index","CategoryProduct", new {id = category.id })">@category.category_name</a>
                                    </h4>

                                </div>
                            }
                        </div>

                    </div><!--/category-products-->

                    <div class="brands_products">
                        <!--brands_products-->
                        <h2>Publisher</h2>
                        <div class="brands-name">
                            <ul class="nav nav-pills nav-stacked">

                                @foreach (var item in Model.ListPublisher)
                                {
                                    <li><a href="@Url.Action("Index","PublisherProduct", new {id = item.id })">@item.publisher_name</a></li>
                                }
                            </ul>
                        </div>
                    </div><!--/publisher-->


                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="~/images/home/shipping.jpg" alt="" />
                    </div><!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    @{
                        string search = ViewBag.search;
                    }
                    <h2 class="title text-center">Searched: @search</h2>

                    @foreach (var book in Model.ListBook)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper ">

                                <div class="single-products ">
                                    <div class="productinfo text-center">

                                        <img src="~/images/shop/@book.image" alt="" />
                                        <h2>$@book.price</h2>
                                        <p>@book.title</p>
                                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                    </div>
                                    <a href="@Url.Action("Detail", "Product", new { id = book.id})">
                                        <div class="product-overlay">
                                            <div class="overlay-content">
                                                <img src="~/images/shop/@book.image" alt="" />
                                                <h2>$@book.price</h2>
                                                <p>@book.title</p>

                                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                            </div>
                                        </div>
                                    </a>

                                </div>
                            </div>
                        </div>
                    }



                </div><!--features_items-->

                <ul class="pagination">
                    @{
                        int numberPage = ViewBag.numberPage;
                        int pageCurrent = ViewBag.pageCurrent;
                        int i;
                        for (i = 1; i <= numberPage; i++)
                        {
                            if (i == pageCurrent)
                            {
                                <li class="active"><a href="?page=@i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="?page=@i">@i</a></li>
                            }
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</section>


@section js{
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollUp.min.js")"></script>
    <script src="@Url.Content("~/Scripts/price-range.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")"></script>
    <script src="@Url.Content("~/Scripts/main.js")"></script>
}
