@model bookstore.ViewModels.BookCategoryPublisherAuthorViewModel

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("Index", "Widget")
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">@Model.Category.category_name</h2>
                    @if (Model.ListBook.Count() == 0)
                    {
                        <h2 style="color:#FE980F">No Match Any Book</h2>
                    }
                    else
                    {
                        foreach (var book in Model.ListBook)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper ">

                                    <div class="single-products ">
                                        <div class="productinfo text-center">

                                            <img src="~/images/shop/@book.image" alt="" />
                                            <h2>$@book.price</h2>
                                            <p>@book.title</p>
                                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        </div>
                                        <a href="@Url.Action("ProductDetail", "Home", new { id = book.id})">
                                            <div class="product-overlay">
                                                <div class="overlay-content">
                                                    <img src="~/images/shop/@book.image" alt="" />
                                                    <h2>$@book.price</h2>
                                                    <p>@book.title</p>

                                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                                </div>
                                            </div>
                                        </a>

                                    </div>
                                </div>
                            </div>
                        }
                    }




                </div><!--features_items-->

                <ul class="pagination">
                    @{
                        int numberPage = ViewBag.numberPage;
                        int pageCurrent = ViewBag.pageCurrent;
                        int i;
                        for (i = 1; i <= numberPage; i++)
                        {
                            if (i == pageCurrent)
                            {
                                <li class="active"><a href="?page=@i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="?page=@i">@i</a></li>
                            }
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</section>


@section js{
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollUp.min.js")"></script>
    <script src="@Url.Content("~/Scripts/price-range.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")"></script>
    <script src="@Url.Content("~/Scripts/main.js")"></script>
}
