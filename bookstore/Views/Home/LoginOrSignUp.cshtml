
@model bookstore.Models.User

@{
    ViewBag.Title = "LoginOrSignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">

                <div class="login-form">

                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Login to your account</h2>
                        <label>@ViewBag.LoginFail</label>
                        <div>
                            @Html.TextBoxFor(m => m.username, new { placeholder = "User Name" })
                            @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })

                            @Html.PasswordFor(m => m.password, new { placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })

                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                    }
                </div><!--/login form-->

            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2>New User Signup!</h2>
                        <label>@ViewBag.SignUpFail</label>
                        <div>
                            @Html.TextBoxFor(m => m.username, new { placeholder = "Username" })
                            @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger" })

                            @Html.PasswordFor(m => m.password, new { placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })

                            @Html.PasswordFor(m => m.repassword, new { placeholder = "Reentered Password" })
                            @Html.ValidationMessageFor(m => m.repassword, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.name, new { placeholder = "Your Name" })
                            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.phone, new { placeholder = "Phone" })
                            @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.email, new { placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.dob, new { type = "date", placeholder = "Date of birth" })
                            @Html.ValidationMessageFor(m => m.dob, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-default">Sign Up</button>
                    }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>


@section js
{
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollUp.min.js")"></script>
    <script src="@Url.Content("~/Scripts/price-range.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")"></script>
    <script src="@Url.Content("~/Scripts//main.js")"></script>}


