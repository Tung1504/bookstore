@using bookstore.Helpers
@using bookstore.Models
<header id="header">
    <!--header-->
    <div class="header_top">
        <!--header_top-->
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="contactinfo">
                        <ul class="nav nav-pills">
                            <li><a href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
                            <li><a href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="social-icons pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header_top-->

    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-md-4 clearfix">
                    <div class="logo pull-left">
                        <a href="@Url.Action("Index", "Home")"><img src="~/images/home/logo.png" alt="" /></a>
                    </div>
                    
                </div>
                <div class="col-md-8 clearfix">
                    <div class="shop-menu clearfix pull-right">
                        <ul class="nav navbar-nav">
                            @*<li><a href=""><i class="fa fa-user"></i> Account</a></li>*@
                            @*<li><a href=""><i class="fa fa-star"></i> Wishlist</a></li>*@

                            @if (AuthUser.GetLogin() != null)
                            {

                                int count = 0;
                                if (Session["cart"] != null)
                                {
                                    count = (Session["cart"] as List<CartItem>).Count;
                                }
                                <li><a href="@Url.Action("Index", "Cart")"><i class="fa fa-shopping-cart"></i> Cart(@count)</a></li>
                                <li><a href="@Url.Action("Index", "UserOrder")"><i class="fa fa-book"></i> Your Order </a></li>

                                <li><a href="@Url.Action("Index", "Customer")"><i class="fa fa-user"></i> Hello @AuthUser.GetLogin().name</a></li>

                                if (AuthUser.GetLogin().role.ToString() == "Admin")
                                {
                                    <li><a href="@Url.Action("Admin", "Home")"><i class="fa fa-users"></i>Admin</a></li>
                                }

                                <li><a href="@Url.Action("Logout", "Auth")"><i class="fa fa-sign-out"></i> Logout</a></li>
                            }
                            else
                            {
                                int count = 0;
                                if (Session["cart"] != null)
                                {
                                    count = (Session["cart"] as List<CartItem>).Count;
                                }
                                <li><a href="@Url.Action("Index", "Cart")"><i class="fa fa-shopping-cart"></i> Cart(@count)</a></li>

                                <li><a href="@Url.Action("LoginOrSignUp", "Auth")"><i class="fa fa-lock"></i> LoginOrSignUp</a></li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header-middle-->

    <div class="header-bottom">
        <!--header-bottom-->
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="mainmenu pull-left">
                        <ul class="nav navbar-nav collapse navbar-collapse">
                            <li><a href="@Url.Action("Index", "Home")" class="active">Home</a></li>
                            @*<li class="dropdown">
                                    <a href="#">Shop<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="shop.html">Products</a></li>
                                        <li><a href="product-details.html">Product Details</a></li>
                                        <li><a href="checkout.html">Checkout</a></li>
                                        <li>@Html.ActionLink("Cart", "Cart", "Home")</li>
                                        <li><a href="login.html">Login</a></li><!--Login-->

                                    </ul>
                                </li>*@
                            @*<li class="dropdown">
                                    <a href="#">Blog<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><a href="blog.html">Blog List</a></li>
                                        <li><a href="blog-single.html">Blog Single</a></li>
                                    </ul>
                                </li>
                                <li><a href="404.html">404</a></li>*@

                            <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-3">
                    @*<div class="search_box pull-right">
                            <input type="text" placeholder="Search" />
                        </div>*@

                    @using (Html.BeginForm("Shop", "Home", FormMethod.Get, new { @class = "search_box pull-right" }))
                    {
                        @Html.TextBox("search", "", new { placeholder = "Search..." })
                    }
                </div>
            </div>
        </div>
    </div><!--/header-bottom-->
</header><!--/header-->