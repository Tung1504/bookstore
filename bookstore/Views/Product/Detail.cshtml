        </div>
        <div class="col-sm-7">
            <div class="product-information">
                <!--/product-information-->
                <img src="~/images/product-details/new.jpg" class="newarrival" alt="" />
                <h2>@Model.Book.title</h2>
                <span>
                    <span>US $@Model.Book.price</span>
                    <label>Quantity:</label>
                    @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { style = "display:inline" }))
                    {
                        <input type="hidden" name="bookId" value="@Model.Book.id" />
                        <input type="number" min="1" step="1" name="qty" value="@Model.Quantity" style="width: 75px" />
                        <button type="submit" class="btn btn-fefault cart">
                            <i class="fa fa-shopping-cart"></i>
                            Add to cart
                        </button>
                    }
                    @if (TempData["Notification"] != null)
                    {
                        <script type="text/javascript">

            window.onload = function () {
                alert("@TempData["Notification"]");
            };
                        </script>
                    }
                </span>
                <p><b>Availability:</b> @Model.Book.quantity_in_stock</p>
                <p><b>Category:</b> @Model.Category.category_name</p>
                <p><b>Publishder:</b> @Model.Publisher.publisher_name</p>
                <p><b>Author:</b> @Model.Author.author_name</p>
            </div><!--/product-information-->
        </div>
    </div><!--/product-details-->

    <div class="category-tab shop-details-tab">
        <div class="col-sm-12">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#details" data-toggle="tab">Details</a></li>
                <li><a hrer="#similars" data-toggle="tab">Similars</a></li>
            </ul>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade" id="details">
                <div class="col-sm-12">
                    <p>@Model.Book.description</p>
                </div>
            </div>


        </div>
    </div>
</div>

