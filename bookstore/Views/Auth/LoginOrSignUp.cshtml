@model bookstore.ViewModels.Auth.LoginSignUpViewModel

@{
    ViewBag.Title = "LoginOrSignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Login to your account</h2>
                        if (TempData["login-failed"] != null)
                        {
                            <div class="alert alert-danger alert-dismissable" role="alert">
                                @TempData["login-failed"]
                            </div>
                        }

                        <div>
                            @Html.TextBoxFor(m => m.LoginViewModel.Username, new { placeholder = "User Name" })
                            @Html.ValidationMessageFor(m => m.LoginViewModel.Username, "", new { @class = "text-danger" })

                            @Html.PasswordFor(m => m.LoginViewModel.Password, new { placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.LoginViewModel.Password, "", new { @class = "text-danger" })

                        </div>
                        <button type="submit" class="btn btn-default" name="login">Login</button>
                    }
                </div><!--/login form-->

            </div>
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h2>New User Signup!</h2>
                        if (TempData["signup-failed"] != null)
                        {
                            <div class="alert alert-danger alert-dismissable" role="alert">
                                @TempData["signup-failed"]
                            </div>
                        }
                        <div>
                            @Html.TextBoxFor(m => m.SignupViewModel.Username, new { placeholder = "Username" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.Username, "", new { @class = "text-danger" })

                            @Html.PasswordFor(m => m.SignupViewModel.Password, new { placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.Password, "", new { @class = "text-danger" })

                            @Html.PasswordFor(m => m.SignupViewModel.RePassword, new { placeholder = "Reentered Password" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.RePassword, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.SignupViewModel.Name, new { placeholder = "Your Name" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.Name, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.SignupViewModel.Phone, new { placeholder = "Phone" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.Phone, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.SignupViewModel.Email, new { placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.Email, "", new { @class = "text-danger" })

                            @Html.TextBoxFor(m => m.SignupViewModel.Dob, new { type = "date", placeholder = "Date of birth" })
                            @Html.ValidationMessageFor(m => m.SignupViewModel.Dob, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-default" name="signup">Sign Up</button>
                    }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->

@section js
{
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.scrollUp.min.js")"></script>
    <script src="@Url.Content("~/Scripts/price-range.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.prettyPhoto.js")"></script>
    <script src="@Url.Content("~/Scripts//main.js")"></script>
}


