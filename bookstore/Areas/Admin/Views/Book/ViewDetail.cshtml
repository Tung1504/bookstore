@model bookstore.ViewModels.BookCategoryPublisherAuthorViewModel
@{
    ViewBag.Title = "ViewDetail Book";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>ViewDetail</h2>

<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid  dashboard-content">
            <div class="container-fluid dashboard-content ">
                <div class="row">
                    <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pr-xl-0 pr-lg-0 pr-md-0  m-b-30">
                                <div class="product-slider">
                                    <div id="productslider-1" class="product-carousel carousel slide" data-ride="carousel">

                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img class="d-block" src="~/images/shop/@Model.Book.image" alt="First slide">
                                            </div>

                                        </div>
                                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pl-xl-0 pl-lg-0 pl-md-0 border-left m-b-30">
                                <div class="product-details">
                                    <div class="border-bottom pb-3 mb-3">
                                        <h2 class="mb-3">@Model.Book.title</h2>

                                        <h3 class="mb-0 text-primary">$@Model.Book.price</h3>
                                    </div>
                                    <div class="product-colors border-bottom">
                                        <p><strong class="text-dark" style="font-size:larger">Category:  </strong>@Model.Book.Category.category_name</p>
                                        <p><strong class="text-dark" style="font-size:larger">Author:  </strong>@Model.Book.Author.author_name</p>
                                        <p><strong class="text-dark" style="font-size:larger">Publisher:  </strong>@Model.Book.Publisher.publisher_name</p>
                                        
                                    </div>
                                    <div class="product-size border-bottom">
                                        <h4>Edition</h4>
                                        <div class="btn-group" role="group" aria-label="First group">
                                            @Html.DisplayFor(m => m.Book.edition)
                                        </div>
                                        <div class="product-qty" aria-label="First group">
                                            <h4>Quantity</h4>
                                            <div class="quantity">
                                                @Html.DisplayFor(m => m.Book.quantity_in_stock)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="product-description">
                                        <h4 class="mb-1">Descriptions</h4>
                                        <p>@Model.Book.description</p>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>