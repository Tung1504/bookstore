@model IEnumerable<bookstore.Models.Book>
@{
    ViewBag.Title = "Manage Books";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">BOOK DETAILS </h3>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Manage Books</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-5">
                <div class="card">
                    <div class="card-body">
                        @*<h3 class="card-title"><strong class="text-dark">BOOKS</strong></h3>*@
                        @if (ViewBag.SuccessMsg != null)
                        {
                            <div class="alert alert-success" id="success">
                                <a href="#" class="close" data-dismiss="alert">&times;</a>
                                <p>@ViewBag.SuccessMsg</p>
                            </div>
                        }
                        <a href="@Url.Action("Create", "Book")" class="btn btn-success fas fa-plus mb-3"> Create New</a>

                        <div class="table-responsive">
                            <table class="table table-bordered first">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity In Stock</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model)
                                    {
                                        <tr>
                                            <td>@book.id</td>
                                            <td>@book.title</td>
                                            <td>@book.price</td>
                                            <td>@book.quantity_in_stock</td>
                                            <td><img style="width:50px;height:50px" src="~/images/shop/@book.image" /></td>
                                            <td>
                                                @Html.ActionLink(" Edit", "Edit", new { id = book.id }, new { @class = "btn btn-light fas fa-edit" })
                                                @Html.ActionLink(" Detail", "ViewDetail", new { id = book.id }, new { @class = "btn btn-primary fas fa-file" })
                                                @using (Html.BeginForm("Delete", "Book", new { id = book.id }, FormMethod.Post, new { style = "display:inline" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger fas fa-trash" onclick="return confirm('Delete this item?')"> Delete</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section css{
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/vendor/datatables/css/dataTables.bootstrap4.css">
}


@section js{
    <script src="~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/js/data-table.js"></script>
    <script>
        setTimeout(function () {
            $('#success').fadeOut('slow');
        }, 2000);
    </script>
}

