@model IEnumerable<bookstore.Models.Book>
@{
    ViewBag.Title = "Manage Books";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">BOOKS</h5>
                    <div class="card-header">
                        <button type="button"><a href="@Url.Action("Create", "Book")">Create New</a></button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantiy In Stock</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model)
                                    {
                                        <tr>
                                            <td>@book.id</td>
                                            <td>@book.title</td>
                                            <td>@book.price</td>
                                            <td>@book.quantity_in_stock</td>
                                            <td><img style="width:50px;height:50px" src="~/images/shop/@book.image" /></td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = book.id })
                                                @Html.ActionLink("ViewDetail", "ViewDetail", new { id = book.id })
                                                @using (Html.BeginForm("Delete", "Book", new { id = book.id }, FormMethod.Post))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit">Delete</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantiy In Stock</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section css{
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content//vendor/datatables/css/dataTables.bootstrap4.css">
}


@section js{
    <script src="~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/js/data-table.js"></script>
}

