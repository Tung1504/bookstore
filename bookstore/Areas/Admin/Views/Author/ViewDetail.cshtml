@model bookstore.Models.Author
@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>User Details</h2>
<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="container-fluid  dashboard-content">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">About Author</h2>
                    <br />
                    <div class="row">

                        <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-12">
                            <div class="text-center">
                                <img src="~/images/author/@Model.image" alt="User Avatar" class="rounded-circle user-avatar-xxl">
                            </div>
                        </div>
                        <div class="col-xl-10 col-lg-8 col-md-8 col-sm-8 col-12">
                            <div class="user-avatar-info">
                                <div class="m-b-20">
                                    <div class="user-avatar-name">
                                        <p class="mb-1">Author Name: @Model.author_name</p>
                                    </div>

                                </div>
                                <!--  <div class="float-right"><a href="#" class="user-avatar-email text-secondary">www.henrybarbara.com</a></div> -->
                                <div class="user-avatar-address">
                                    <p>Birth Years: @Model.birth_year</p>
                                    <p>Active Status: @Model.status</p>
                                    <p>Description:@Model.description</p>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
