@model bookstore.Models.Author
@{
    Layout = null;
}

@using(Html.BeginForm("AddOrEdit", "Author", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(m => m.id)
    <div class="form-group">
        @Html.LabelFor(m => m.author_name, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.author_name, new { @class="form-control"})
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-light" />
    </div>
}