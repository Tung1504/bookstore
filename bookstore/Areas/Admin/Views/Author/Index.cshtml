            //})

            $('body').on('click', '.btnEdit', function () {
                var id = $(this).data('id');

                if (id > 0) {
                    document.getElementById('title').innerHtml = "Edit Author"
                    GetDataById(id);
                }
            });

            $('body').on('click', '.btnDel', function () {
                var id = $(this).data('id');

                if (parseInt(id) > 0) {
                    var conf = confirm("Are you sure to delete this author?");
                    if (conf) {
                        Delete(id)
                        //alert("Deleted Successfully!")
                        window.location.reload();
                    }

                }

            });


            function LoadData() {
                $.ajax({
                    url: "/Admin/Author/GetData",
                    type: "GET",
                    success: function (res) {
                        //if (res.TotalItems > 0) {
                        //    var items = res.Data;
                        //    var html = "";
