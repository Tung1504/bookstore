                    }
                });
            }

            function Reset() {
                $('#name').value('');
                $('#editName').value('');
            }

            function Validate() {
                var check = false;
                var name = $('#name').val();
                if (name === '') {
                    $('#name').next().html('Please enter author name');
                    check = false;
                }
                else {
                    $('#name').next().html('');
                    check = true;
                }
                return check;
            }

            function GetDataById(id) {
                $.ajax({
                    url: "/Admin/Author/GetById",
                    type: "GET",
                    data: { id: id },
                    success: function (res) {
                        if (res.data != null) {
                            $('#name').val(res.data.author_name);
                            $('#id').val(res.data.id);
                            $('#createModal').modal('show');
                        }
                    }
                })
            }

            function Delete(id) {
                $.ajax({
                    url: "/Admin/Author/DeleteRecord",
                    type: "POST",
                    data: { id: id }
