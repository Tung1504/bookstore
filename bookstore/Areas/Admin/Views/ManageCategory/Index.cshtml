@model IEnumerable<bookstore.Models.Category>

@{
    ViewBag.Title = "ManageCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Manage Category</h2>



<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        
        <div class="row">
            <div class="col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">LIST OF CATEGORIES</h5>
                    
                    <div class="card-header">
                        <button type="button" href="@Url.Action("Create", "ManageCategory")">Create New</button>
                        
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Category Name</th>
                                    <th scope="col">Actions</th>

                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.id</td>
                                        <td>@category.category_name</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = category.id })

                                            @using (Html.BeginForm("Delete", "ManageCategory", new { id = category.id }, FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit">Delete</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section js{
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/slimscroll/jquery.slimscroll.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/custom-js/jquery.multi-select.html")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/js/main-js.js")"></script>
}
