@model IEnumerable<bookstore.Models.Category>


@{
    ViewBag.Title = "ManageCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Manage Category</h2>



<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="container">
          

            


            <div class="row">
                <div class="col-sm-12 col-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="card-header">
                                <h5 class="card-title">CATEGORIES</h5>


                                <a class="btn btn-primary mb-3" href="@Url.Action("Create", "ManageCategory")">Create New</a>

                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Category Name</th>
                                        <th scope="col">Actions</th>

                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.id</td>
                                            <td>@category.category_name</td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = category.id }, new { @class = "btn btn-warning" })
                                                @using (Html.BeginForm("Delete", "ManageCategory", new { id = category.id }, FormMethod.Post, new { @style = "display:inline" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-primary">Delete</button>
                                                }
                                            </td>

                                        </tr>



                                    }

                                </tbody>
                            </table>
                           


                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts{
    <script>


    </script>

    }

    @section js{

        <script src="@Url.Content("~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js")"></script>
        <script src="@Url.Content("~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.js")"></script>
        <script src="@Url.Content("~/Areas/Admin/Content/vendor/slimscroll/jquery.slimscroll.js")"></script>
        <script src="@Url.Content("~/Areas/Admin/Content/vendor/custom-js/jquery.multi-select.html")"></script>
        <script src="@Url.Content("~/Areas/Admin/Content/js/main-js.js")"></script>
    }
