@model IEnumerable<bookstore.Models.Category>

@{
    ViewBag.Title = "Manage Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Manage Category</h2>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="#" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </a>
                </div>
                <div class="modal-body">
                    <label for="cat_name">Name</label>
                    <input id="cat_name" value="Category_Name" />
                </div>
                <div class="modal-footer">
                    <a href="#" id="btnSave" class="btn btn-primary mr-2">Save</a>
                    <a href="#" id="btnCancel" class="btn btn-danger" data-dismiss="modal">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">CATEGORIES</h5>
                        <a class="btn btn-success fas fa-plus mb-3" href="@Url.Action("Create", "Category")"> Create New</a>

                        <div class="table-responsive">
                            <table class="table table-bordered first">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Category Name</th>
                                        <th scope="col">Actions</th>

                                    </tr>
                                </thead>


                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.id</td>
                                            <td>@category.category_name</td>
                                            <td>
                                                @Html.ActionLink(" Edit", "Edit", new { id = category.id }, new { @class = "btn btn-light fas fa-edit" })

                                                @using (Html.BeginForm("Delete", "Category", new { id = category.id }, FormMethod.Post, new { style = "display:inline" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger fas fa-trash"> Delete</button>
                                                }
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                                    Add new by modals
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section js{
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            LoadData();
            $('#btnSave').click(function () {

                var name = $('#name').val();
                var id = $('#id').val();
                var model = {
                    author_name: name,
                    id: id
                };
                if (Validate()) {
                    $.ajax({
                        url: "/Admin/Category/CreateOrEdit",
                        type: "POST",
                        data: model,
                        success: function (res) {
                            if (res.success) {
                                //LoadData();
                                //$('#Modal').modal('hide');
                                window.location.reload();
                                alert("Updated Succesfully!");
                            }
                        }
                    })
                }
            });

            $('body').on('click', '.btnEdit', function () {
                var id = $(this).data('id');
                GetDataById(id);
            });

            $('body').on('click', '.btnDel', function () {
                var id = $(this).data('id');

                if (parseInt(id) > 0) {
                    var conf = confirm("Are you sure to delete this author?");
                    if (conf) {
                        Delete(id)
                        alert("Deleted Successfully!")
                    }

                }

            });


            function LoadData() {
                $.ajax({
                    url: "/Admin/Author/GetData",
                    type: "GET",
                    success: function (res) {
                        if (res.TotalItems > 0) {
                            var items = res.Data;
                            var html = "";
                            for (let i = 0; i < res.TotalItems; i++) {
                                html += "<tr id='trow" + items[i].id + "'>";
                                html += "<td>" + items[i].id + "</td>";
                                html += "<td>" + items[i].author_name + "</td>";
                                html += "<td><a href='#' data-id='" + items[i].id + "' class ='btn btn-light fas fa-edit mr-2 btnEdit'> Edit</a><a data-id='" + items[i].id + "' href='#' class ='btn btn-danger fas fa-trash btnDel'> Delete</a></td>";
                                html += "</tr>";
                            }
                            $('#tableData').html(html);
                        }
                    }
                });
            }

            function Validate() {
                var check = false;
                var name = $('#name').val();
                if (name === '') {
                    $('#name').next().html('Please enter author name');
                    check = false;
                }
                else {
                    $('#name').next().html('');
                    check = true;
                }
                return check;
            }

            function GetDataById(id) {
                $.ajax({
                    url: "/Admin/Author/GetById",
                    type: "GET",
                    data: { id: id },
                    success: function (res) {
                        if (res.data != null) {
                            $('#name').val(res.data.author_name);
                            $('#id').val(res.data.id);
                            $('#editModal').modal('show');
                        }
                    }
                })
            }

            function Delete(id) {
                $.ajax({
                    url: "/Admin/Author/DeleteRecord",
                    type: "POST",
                    data: { id: id }
                    //success: function (rs) {
                    //    if (rs.success) {
                    //        $('trow' + id).remove();
                    //    } else {
                    //        console.log('error');
                    //    }
                    //}
                }).done(function (res) {
                    if (res.success) {
                        $('#trow' + id).remove();
                    }
                }).fail(function (err) {
                    console.log(err)
                })

            }
        });

    </script>

}

