@model IEnumerable<bookstore.Models.Author>

@{
    ViewBag.Title = "ManageAuthor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Manage Category</h2>



<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                    <div class="card-header">
                        <h5 class="card-title">LIST OF AUTHORS</h5>

                       <a href="@Url.Action("Create", "ManageAuthor")" class="btn btn-primary mb-3">Create New</a>
                    </div>
                       
                   
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Author Name</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var author in Model)
                                {
                                    <tr>
                                        <td>@author.id</td>
                                        <td>@author.author_name</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = author.id },new { @class="btn btn-danger"})

                                            @using (Html.BeginForm("Delete", "ManageAuthor", new { id = author.id }, FormMethod.Post,new { @style = "display:inline" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section js{
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/slimscroll/jquery.slimscroll.js")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/vendor/custom-js/jquery.multi-select.html")"></script>
    <script src="@Url.Content("~/Areas/Admin/Content/js/main-js.js")"></script>
}
