@model IEnumerable<bookstore.Models.Publisher>

@{
    ViewBag.Title = "ManagePublisher";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">PUBLISHER</h3>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active">Manage Publisher</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        @*<h5 class="card-title">PUBLISHERS</h5>*@
                        @if (TempData["success"] != null)
                        {
                            <div class="alert alert-success" id="success">
                                <a href="#" class="close" data-dismiss="alert">&times;</a>
                                <p>@TempData["success"]</p>
                            </div>
                        }

                        @*<a href="#" class="btn btn-success fas fa-plus mb-3" data-toggle="modal" data-target="#createModal"> Create New</a>*@
                        <a class="btn btn-success fas fa-plus mb-3" href="@Url.Action("Create", "Publisher")"> Create New</a>

                        <div class="#">
                            <table class="table table-bordered first" id="publisherTable">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Publisher Name</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                @*<tbody id="tableData">

                                </tbody>*@
                                <tbody>
                                    @foreach (var publisher in Model)
                                    {
                                        <tr>
                                            <td>@publisher.id</td>
                                            <td>@publisher.publisher_name</td>
                                            <td>
                                                @*<a href='#' data-id="@author.id" class='btn btn-light fas fa-edit mr-2 btnEdit'> Edit</a>*@
                                                @Html.ActionLink(" Edit", "Edit", new { id = publisher.id }, new { @class = "btn btn-light fas fa-edit mr-2" })
                                                @Html.ActionLink(" Detail", "ViewDetail", new { id = publisher.id }, new { @class = "btn btn-primary fas fa-file mr-2" })    
                                                @using (Html.BeginForm("Delete", "Publisher", new { area = "Admin", id=publisher.id }, FormMethod.Post, new { style="display:inline"}))
                                                {
                                                    <button type="submit" class="btn btn-danger fas fa-trash btnDel"> Delete</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section js{
    <script src="~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/datatables/js/data-table.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/Areas/Admin/Content/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Content/js/main-js.js"></script>
    <script>
        $(document).ready(function () {

            $('body').on('click', '.btnDel', function () {
                var id = $(this).data('id');

                if (parseInt(id) > 0) {
                    var conf = confirm("Are you sure to delete this author?");
                    if (conf) {
                        Delete(id)
                        //alert("Deleted Successfully!")
                        window.location.reload();
                    }

                }

            });

            function Delete(id) {
                $.ajax({
                    url: "/Admin/Publisher/DeleteRecord",
                    type: "POST",
                    data: { id: id }
                   
                }).done(function (res) {
                    if (res.success) {
                        $('#trow' + id).remove();
                    }
                }).fail(function (err) {
                    console.log(err)
                })

            }
        });

        setTimeout(function () {
            $('#success').fadeOut('slow');
        }, 2000);

    </script>
}

@section css{
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/vendor/datatables/css/dataTables.bootstrap4.css">
}



