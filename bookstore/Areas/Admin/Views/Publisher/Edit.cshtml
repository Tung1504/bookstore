@model bookstore.Models.Publisher
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">EDIT PUBLISHER DETAIL</h3>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Publisher")" class="breadcrumb-link">Manage Publisher</a></li>
                                <li class="breadcrumb-item active">Edit Publisher Details</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
            @using (Html.BeginForm("Edit", "Publisher", FormMethod.Post))
            {
                @Html.ValidationSummary();
                @Html.AntiForgeryToken();
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Publisher Information</h2>
                        <br />
                        <div class="row">

                            <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-12">
                                <div class="text-center">
                                    <img src="~/images/publisher/@Model.image" alt="User Avatar" class="rounded-circle user-avatar-xxl">
                                    <lable>Image</lable>
                                    <input type="file" name="upload_image" id="upload_image" class="form-control" />
                                    <br />
                                </div>
                            </div>
                            <div class="col-xl-10 col-lg-8 col-md-8 col-sm-8 col-12">
                                <div class="user-avatar-info">
                                    <div class="user-avatar-address">
                                        <label>Publisher Name</label>
                                        @Html.TextBoxFor(m => m.publisher_name, new { type = "text", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.publisher_name, "", new { @class = "text-danger" })
                                        <br />
                                        <label>Publisher Established Date</label>
                                        @Html.TextBoxFor(m => m.est_date, new { type = "text", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.est_date, "", new { @class = "text-danger" })
                                        <br />


                                        <label>Description</label>
                                        @Html.TextAreaFor(m => m.description, new { type = "text", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.description, "", new { @class = "text-danger" })
                                        <br />
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
