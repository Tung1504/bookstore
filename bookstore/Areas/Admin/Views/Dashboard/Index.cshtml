@model bookstore.Areas.Admin.ViewModels.BookCategoryAuthorPublisherViewModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <div class="ecommerce-widget">

                <div class="row">
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-muted">Total Books </h5>
                                <div class="metric-value d-inline-block">
                                    <h1 class="mb-1">@Model.books.Count()</h1>
                                </div>
                                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                    <span><i class="fa fa-fw fa-arrow-up"></i></span><span>5.86%</span>
                                </div>
                            </div>
                            <div id="sparkline-revenue"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-muted">Total Category</h5>
                                <div class="metric-value d-inline-block">
                                    <h1 class="mb-1">@Model.categories.Count()</h1>
                                </div>
                                <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                    <span><i class="fa fa-fw fa-arrow-up"></i></span><span>5.86%</span>
                                </div>
                            </div>
                            <div id="sparkline-revenue2"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-muted">Total Publiser</h5>
                                <div class="metric-value d-inline-block">
                                    <h1 class="mb-1">@Model.publishers.Count()</h1>
                                </div>
                                <div class="metric-label d-inline-block float-right text-primary font-weight-bold">
                                    <span>N/A</span>
                                </div>
                            </div>
                            <div id="sparkline-revenue3"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="text-muted">Total Author</h5>
                                <div class="metric-value d-inline-block">
                                    <h1 class="mb-1">@Model.authors.Count()</h1>
                                </div>
                                <div class="metric-label d-inline-block float-right text-secondary font-weight-bold">
                                    <span>-2.00%</span>
                                </div>
                            </div>
                            <div id="sparkline-revenue4"></div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-xl-12 col-lg-12 col-md-8 col-sm-12 col-16">
                        <div class="card">
                            <h5 class="card-header">Recent Book</h5>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class="bg-light">
                                            <tr class="border-0">
                                                <th class="border-0">#</th>
                                                <th class="border-0">Image</th>
                                                <th class="border-0">Title</th>
                                                <th class="border-0">ID</th>
                                                <th class="border-0">Quantity</th>
                                                <th class="border-0">Price</th>
                                                <th class="border-0">Author</th>
                                                <th class="border-0">Publisher</th>
                                                <th class="border-0">Category</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.books)
                                            {
                                                <tr>
                                                    <td>#</td>
                                                    <td>#</td>
                                                    <td>#@item.title</td>
                                                    <td>@item.id</td>
                                                    <td>@item.quantity_in_stock</td>
                                                    <td>@item.price</td>
                                                    <td>@item.Author.author_name</td>
                                                    <td>@item.Publisher.publisher_name</td>
                                                    <td>@item.Category.category_name</td>
                                                </tr>
                                            }

                                            <tr>
                                                <td colspan="9"><a href="@Url.Action("Index", "ManageBook")" class="btn btn-outline-light float-right">View Details</a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>




                <div class="row">
                    <div class="col-xl-5 col-lg-6 col-md-6 col-sm-12 col-12">
                        <!-- ============================================================== -->
                        <!-- social source  -->
                        <!-- ============================================================== -->
                        <div class="card">
                            <h5 class="card-header"> Author</h5>
                            <div class="card-body p-0">
                                <ul class="social-sales list-group list-group-flush">
                                    @foreach (var item in Model.authors)
                                    {
                                        <li class="list-group-item social-sales-content">
                                            <span class="social-sales-icon-circle facebook-bgcolor mr-2"><i class="fab fa-facebook-f"></i></span><span class="social-sales-name">@item.author_name</span><span class="social-sales-count text-dark">@item.id</span>
                                        </li>
                                    }

                                </ul>
                            </div>
                            <div class="card-footer text-center">
                                <a href="@Url.Action("Index", "ManageAuthor")" class="btn-primary-link">View Details</a>
                            </div>
                        </div>
                        <!-- ============================================================== -->
                        <!-- end social source  -->
                        <!-- ============================================================== -->
                    </div>
                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
                        <!-- ============================================================== -->
                        <!-- sales traffice source  -->
                        <!-- ============================================================== -->
                        <div class="card">
                            <h5 class="card-header"> Category</h5>
                            <div class="card-body p-0">
                                <ul class="traffic-sales list-group list-group-flush">
                                    @foreach (var item in Model.categories)
                                    {
                                        <li class="traffic-sales-content list-group-item ">
                                            <span class="traffic-sales-name">@item.id</span><span class="traffic-sales-amount">@item.category_name <span class="icon-circle-small icon-box-xs text-success ml-4 bg-success-light"><i class="fa fa-fw fa-arrow-up"></i></span></span>
                                        </li>
                                    }

                                </ul>
                            </div>
                            <div class="card-footer text-center">
                                <a href="@Url.Action("Index", "ManageCategory")" class="btn-primary-link">View Details</a>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end sales traffice source  -->
                    <!-- ============================================================== -->
                    <!-- ============================================================== -->
                    <!-- sales traffic country source  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-3 col-lg-12 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <h5 class="card-header">Publisher</h5>
                            <div class="card-body p-0">
                                <ul class="country-sales list-group list-group-flush">
                                    @foreach (var pub in Model.publishers)
                                    {
                                        <li class="country-sales-content list-group-item">

                                            <span class="">@pub.publisher_name</span><span class="float-right text-dark">@pub.id</span>
                                        </li>
                                    }


                                </ul>
                            </div>
                            <div class="card-footer text-center">
                                <a href="@Url.Action("Index", "ManagePublisher")" class="btn-primary-link">View Details</a>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end sales traffice country source  -->
                    <!-- ============================================================== -->
                </div>
            </div>
        </div>
</div>
