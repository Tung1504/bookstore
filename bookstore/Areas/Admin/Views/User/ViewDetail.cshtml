                                    new SelectListItem() {Text = "Customer", Value="Customer"}
                                }) <br />
                                <button type="submit" class="btn btn-primary">Update Status</button>
                                }
                                @Html.ActionLink(" Update Status", "Edit", new { id = Model.User.id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>*@

                    </div>
                    <!-- ============================================================== -->
                    <!-- end card profile -->
                    <!-- ============================================================== -->
                </div>
                <!-- ============================================================== -->
                <!-- end profile -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- campaign data -->
                <!-- ============================================================== -->
                <div class="col-xl-9 col-lg-9 col-md-7 col-sm-12 col-12">
                    <!-- ============================================================== -->
                    <!-- campaign tab one -->
                    <!-- ============================================================== -->
                    <div class="influence-profile-content pills-regular">
                        <ul class="nav nav-pills mb-3 nav-justified" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-campaign-tab" data-toggle="pill" href="#address" role="tab" aria-controls="address" aria-selected="true">Billing Address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-packages-tab" data-toggle="pill" href="#card" role="tab" aria-controls="pills-packages" aria-selected="false">Payment Card</a>
                            </li>
                        </ul>

                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="address" role="tabpanel" aria-labelledby="address">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <table class="table table-bordered first">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Address</th>
                                                            <th scope="col">District</th>
                                                            <th scopt="col">City</th>
                                                            <th scope="col">Postal Code</th>
                                                        </tr>
                                                    </thead>


                                                    <tbody>

                                                        @foreach (var address in Model.User.Addresses)
                                                        {

                                                            <tr>
                                                                <td>@address.address1</td>
                                                                <td>@address.district</td>
                                                                <td>@address.city</td>
                                                                <td>@address.postal_code</td>
                                                            </tr>
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="card" role="tabpanel" aria-labelledby="card">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="card">
                                            <div class="card-body">

                                                <table class="table table-bordered first">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">Card Number</th>
                                                            <th scope="col">Card Type</th>
                                                            <th scopt="col">From Date</th>
                                                            <th scope="col">To Date</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody>

                                                        @foreach (var card in Model.User.Payment_card)
                                                        {

                                                            <tr>
                                                                <td>****@card.card_number.ToString().Substring(card.card_number.ToString().Length - 4)</td>
                                                                <td>@card.card_type</td>
                                                                <td>@card.from_date.Month/@card.from_date.Year</td>
                                                                <td>@card.to_date.Month/@card.to_date.Year</td>
                                                            </tr>
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- ============================================================== -->
                            <!-- end campaign tab one -->
                            <!-- ============================================================== -->
                        </div>
                        <!-- ============================================================== -->
                        <!-- end campaign data -->
                        <!-- ============================================================== -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section js{

    <script src="~/Areas/Admin/Content/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Areas/Admin/Content/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/Areas/Admin/Content/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Content/js/main-js.js"></script>
}
