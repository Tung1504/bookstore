@model bookstore.ViewModels.Auth.LoginSignUpViewModel
@{
    ViewBag.Title = "Create User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">CREATE NEW USER</h3>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "User")" class="breadcrumb-link">Manage User</a></li>
                                <li class="breadcrumb-item active">Create User</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form" }))
        {
            @*@Html.ValidationSummary();*@
            @Html.AntiForgeryToken();
            <label class="text-danger">@ViewBag.CreateFail</label>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-12 col-lg-8 col-md-8 col-sm-8 col-12">
                            <div class="user-avatar-info">

                                <div class="user-avatar-address">

                                    <lable>Name</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.Name, new { type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.Name, "", new { @class = "text-danger" }) <br />

                                    <lable>UserName</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.Username, new { type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.Username, "", new { @class = "text-danger" }) <br />

                                    <lable>Password</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.Password, new { type = "password", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.Password, "", new { @class = "text-danger" }) <br />

                                    <lable>Re-Password</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.RePassword, new { type = "password", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.RePassword, "", new { @class = "text-danger" }) <br />

                                    <lable>Role</lable>
                                    @Html.DropDownListFor(x => x.SignupViewModel.Role, new List<SelectListItem>
                                    {
                                        new SelectListItem() {Text = "Admin", Value="Admin"},
                                        new SelectListItem() {Text = "Customer", Value="Customer"}
                                    }, new { @class = "form-control", style = "width:150px" }) <br />

                                    <lable>Phone</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.Phone, new { type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.Phone, "", new { @class = "text-danger" }) <br />

                                    <lable>Email</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.Email, new { type = "text", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.Email, "", new { @class = "text-danger" }) <br />

                                    <lable>Dob</lable>
                                    @Html.TextBoxFor(m => m.SignupViewModel.Dob, new { type = "date", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.SignupViewModel.Dob, "", new { @class = "text-danger" }) <br />




                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

